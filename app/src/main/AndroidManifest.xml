<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonathanplay.twitter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TweetCompActivity"
            android:label="@string/title_activity_tweet_comp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TweetListActivity"
            android:label="@string/title_activity_tweet_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TweetViewActivity"
            android:label="@string/title_activity_tweet_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
